#ifndef ADC_PRIV_H_
#define ADC_PRIV_H_

/*******************************************************************************/
/*****************************    PRIVATE MACROS     ***************************/


/*******************************************************************************/
/* ADC Register Definition.                                                    */
/*******************************************************************************/
#define ADMUX          (*((volatile u8* const)0x27))
#define ADCSRA         (*((volatile u8* const)0x26))
#define SFIOR          (*((volatile u8* const)0x50))
#define ADCH           (*((volatile u8* const)0x25))
#define ADCL           (*((volatile u8* const)0x24))


//ADMUX BITs DEFINITIONS.
#define    REFS1       7
#define    REFS0       6
#define    ADLAR       5
#define    MUX4        4
#define    MUX3        3
#define    MUX2        2
#define    MUX1        1
#define    MUX0        0



//ADCSRA BITs DEFINITIONS.
#define     ADEN       7
#define     ADSC       6
#define     ADATE      5
#define     ADIF       4
#define     ADIE       3
#define     ADPS2      2
#define     ADPS1      1
#define     ADPS0      0


//SFIOR BITs DEFINITIONS.
#define     ADTS2      7
#define     ADTS1      6
#define     ADTS0      5























#endif /* ADC_PRIV_H_ */
