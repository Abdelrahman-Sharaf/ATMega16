#ifndef ADC_INTERFACE_H_
#define ADC_INTERFACE_H_
/*******************************************************************************/
/*****************************     PUBLIC MACROS     ***************************/
#define ADC_FREE_RUNNING             0
#define ADC_ANALOG_COMPARATOR        1
#define ADC_EXTI0                    2
#define ADC_EXTI0_CTC                3
#define ADC_EXTI0_OVF                4
#define ADC_EXTI0_CTC_B              5
#define ADC_EXTI1_OVF                6
#define ADC_EXTI1_CTC                7

// Single Ended Mode.
#define ADC_CHANNEL_0              0
#define ADC_CHANNEL_1              1
#define ADC_CHANNEL_2              2
#define ADC_CHANNEL_3              3
#define ADC_CHANNEL_4              4
#define ADC_CHANNEL_5              5
#define ADC_CHANNEL_6              6
#define ADC_CHANNEL_7              7

// Double Ended Mode.
 #define ADC_CHANNEL_0_0        // Gain:  *10
 #define ADC_CHANNEL_1_0        // Gain:  *10
 #define ADC_CHANNEL_0_0        // Gain:  *200
 #define ADC_CHANNEL_1_0        // Gain:  *200
 #define ADC_CHANNEL_2_2        // Gain:  *10
 #define ADC_CHANNEL_3_2        // Gain:  *10
 #define ADC_CHANNEL_2_2        // Gain:  *200
 #define ADC_CHANNEL_3_2        // Gain:  *200
 #define ADC_CHANNEL_0_1        // Gain:  *1
 #define ADC_CHANNEL_1_1        // Gain:  *1
 #define ADC_CHANNEL_2_1         // Gain:  *1
 #define ADC_CHANNEL_3_1         // Gain:  *1
 #define ADC_CHANNEL_4_1         // Gain:  *1
 #define ADC_CHANNEL_5_1         // Gain:  *1
 #define ADC_CHANNEL_6_1         // Gain:  *1
 #define ADC_CHANNEL_7_1         // Gain:  *1
 #define ADC_CHANNEL_0_2         // Gain:  *1
 #define ADC_CHANNEL_1_2         // Gain:  *1
 #define ADC_CHANNEL_2_2         // Gain:  *1
 #define ADC_CHANNEL_3_2         // Gain:  *1
#define ADC_CHANNEL_4_2          // Gain:  *1


/*******************************************************************************/
/****************************    PUBLIC FUNCTIONS    ***************************/
ES_t ADC_enuInit(void);
ES_t ADC_enuStartConversion(void);
ES_t ADC_enuPollingSys(void);
ES_t ADC_enuRead(u16* Cpy_pu16Value );
ES_t ADC_enuSelectChannel(u8 Cpy_u8ChannelID );



ES_t ADC_enuCallBack(volatile void(*Cpy_pfunAppFunc)(void*) ,  void* Cpy_pvidAppPara);

#endif /* ADC_INTERFACE_H_ */
