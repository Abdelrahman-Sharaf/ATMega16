#ifndef ROBOT_H_
#define ROBOT_H_

typedef enum
{
	NONE  ,
	RIGHT ,
	LEFT  ,
	UP    ,
	DOWN  ,
}ActionSet_t;

typedef struct
{
	u8 right ;
	u8 left  ;
	u8 up    ;
	u8 down  ;

}AvailableActions_t;


typedef struct
{
	u8 Row ;
	u8 Col ;

}State_t;



typedef enum
{
	false ,
	true
}bool_t;


#define COL_MAX      21
#define ROW_MAX      10

#define COL_MIN      0
#define ROW_MIN      0

//#define




#define UP_LEFT_CORNER      0
#define UP_RIGHT_CORNER     1

#define LOW_LEFT_CORNER     2
#define LOW_RIGHT_CORNER    3


/************************************************************************/
/*********************** FUUNCTIONS DECLARATION *************************/
void INITIAL_STATE( State_t* Cpy_pstrCurrentState );/**/

void ACTIONS( AvailableActions_t* Cpy_pstrAvailableAcions);/**/

State_t RESULT( State_t Cpy_strCurrentState  , ActionSet_t Cpy_enuAction );

bool_t GOAL_TEST( State_t Cpy_strCurrentState );

u8 STEP_COST( State_t Cpy_strCurrentState  ,  ActionSet_t Cpy_enuAction  );






#endif /* ROBOT_H_ */
